@model Note

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <div class="col-6">
                <h2 class="text-dark">Create a Note</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Notes" asp-action="Index" class="btn btn-dark"><i class="bi bi-caret-left-fill"></i> Go back</a>
            </div>

            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="text-secondary p-0"></label>
            <input asp-for="Title" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Content" class="text-secondary p-0"></label>
            <input asp-for="Content" type="text" class="form-control" />
        </div>

        <button type="submit" class="btn btn-dark" style="width: 150px;">Create</button>
    </div>
</form>