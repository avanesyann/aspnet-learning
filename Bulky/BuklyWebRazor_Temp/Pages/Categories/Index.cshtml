@page
@model BuklyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-dark"><i class="bi bi-plus-circle"></i>&nbsp; Create new category</a>
        </div>
    </div>

    <hr class="pb-2" />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoryList)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@category.Id" class="btn btn-dark mx-2">
                                Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@category.Id" class="btn btn-outline-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>