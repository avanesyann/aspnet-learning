@page
@model BuklyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <div class="col-6">
                <h2 class="text-dark">Delete Category</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/Categories/Index" class="btn btn-dark"><i class="bi bi-caret-left-fill"></i> Go back</a>
            </div>

            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="text-secondary p-0"></label>
            <input asp-for="Category.Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="text-secondary p-0"></label>
            <input asp-for="Category.DisplayOrder" type="text" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
    </div>
</form>