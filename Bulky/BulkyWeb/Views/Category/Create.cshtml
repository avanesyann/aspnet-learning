@model Category     // the program will automatically think of this as a new Category object with default values

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <div class="col-6">
                <h2 class="text-dark">Create Category</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark"><i class="bi bi-caret-left-fill"></i> Go back</a>
            </div>

            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="text-secondary p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="text-secondary p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark" style="width: 150px;">Create</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}